@model Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-group text-center mb-4">
                <!-- Display the profile picture -->
                <img id="ProfilePicturePreview" class="img-fluid rounded-circle border" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Picture" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProfilePictureURL" class="form-label">Profile Picture URL</label>
                <input asp-for="ProfilePictureURL" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bio" class="form-label">Bio</label>
                <textarea asp-for="Bio" class="form-control" readonly rows="4"></textarea>
            </div>

            <div class="form-group d-flex justify-content-between mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirm" class="btn btn-danger" />
                </form>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var profilePictureUrl = $("#ProfilePictureURL").val();
            if (profilePictureUrl) {
                output.src = profilePictureUrl;
            }
        });
    </script>
}
