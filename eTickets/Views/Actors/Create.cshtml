@model Actor

@{
    ViewData["Title"] = "Add a New Actor";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Form to create a new actor -->
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <!-- Validation summary to display model validation errors -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group text-center mb-4">
                    <!-- Display the profile picture preview -->
                    <img id="ProfilePicturePreview" class="img-fluid rounded-circle border" style="width: 200px; height: 200px;" />
                </div>

                <div class="form-group mb-3">
                    <!-- Add a file input for the profile picture -->
                    <label asp-for="ProfilePictureURL" class="form-label">Profile Picture</label>
                    <input type="file" asp-for="ProfilePictureURL" class="form-control" accept="image/*" id="ProfilePictureURL" />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Bio" class="form-label">Bio</label>
                    <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Set the profile picture preview image source when the page loads
            var output = document.getElementById('ProfilePicturePreview');
            var profilePictureUrl = "@(Model?.ProfilePictureURL)";
            if (profilePictureUrl) {
                output.src = profilePictureUrl;
            }
        });

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = window.URL.createObjectURL(this.files[0]);
        });
    </script>
}
