@model eTickets.Data.ViewModels.ForgotPasswordVM

@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Full-screen background image -->
<body style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <!-- Card component for form styling -->
        <div class="card shadow-lg p-5" style="background-color: rgba(255, 255, 255, 0.85); width: 100%; max-width: 400px;">
            <!-- Title with a larger font size and spacing -->
            <h2 class="text-center mb-4 text-primary">@ViewData["Title"]</h2>

            <!-- Form starts here -->
            <form asp-action="ForgotPassword" method="post">
                <!-- Email input field -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label text-secondary font-weight-bold"></label>
                    <input asp-for="Email" class="form-control form-control-lg rounded-pill" placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Submit</button>
                </div>
            </form>

            <!-- Success and error messages -->
            <div class="mt-4">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @TempData["Error"]
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center" role="alert">
                        @TempData["Success"]
                    </div>
                }
            </div>

            <!-- Link to return to the login page -->
            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none text-primary">Back to Login</a>
            </div>
        </div>
    </div>
</body>
