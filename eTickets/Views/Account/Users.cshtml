@model IEnumerable<(ApplicationUser User, IList<string> Roles)>

@{
    ViewData["Title"] = "List of All Users";
}

<!-- Include Bootstrap CSS -->
<link href="~/css/stylle.css" rel="stylesheet">

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center align-middle">Profile</th>
                        <th class="text-center align-middle">Full Name</th>
                        <th class="text-center align-middle">Username</th>
                        <th class="text-center align-middle">Email</th>
                        <th class="text-center align-middle">Current Roles</th>
                        <th class="text-center align-middle">Active Status</th>
                        <th class="text-center align-middle">Change Role</th>
                        <th class="text-center align-middle">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @{
                                var profilePictureUrl = item.User.ProfileImageUrl;
                            }
                            <td class="text-center align-middle">
                                @if (!string.IsNullOrEmpty(profilePictureUrl))
                                {
                                    <img src="@profilePictureUrl" class="rounded-circle" style="width:30px;height:30px;" />
                                }
                                else
                                {
                                    <i class="bi bi-person-badge"></i>
                                }
                            </td>
                            <td class="text-center align-middle">@item.User.FullName</td>
                            <td class="text-center align-middle">@item.User.UserName</td>
                            <td class="text-center align-middle">@item.User.Email</td>
                            <td class="text-center align-middle">
                                @foreach (var role in item.Roles)
                                {
                                    <span class="badge bg-info text-dark">@role</span>
                                }
                            </td>
                            <td class="text-center align-middle">
                                @if (item.User.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>

                            <form asp-action="ChangeUserRole" method="post">
                            <td class="text-center align-middle">
                                <select name="NewRole" class="form-select">
                                    <option value="Admin">Admin</option>
                                    <option value="User">User</option>
                                </select>
                            </td>
                            <td class="text-center align-middle">
                                <input type="hidden" name="UserId" value="@item.User.Id" />
                                <button type="submit" class="btn btn-primary">Change Role</button>
                            </td>
                            </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Include Popper.js and Bootstrap JS -->
<script src="~/js/sss.js"></script>

<script>
    // Enable tooltips after the DOM is ready
    document.addEventListener("DOMContentLoaded", function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    });
</script>
