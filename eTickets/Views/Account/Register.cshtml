@using eTickets.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Sign up for a new account";
}

<body style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-5 pt-4 pb-7" style="max-width: 400px; width: 100%; background-color: rgba(255, 255, 255, 0.95); border-radius: 12px;">
            <div class="card-body">
                <h3 class="text-center mb-4" style="color: #007bff;">@ViewData["Title"]</h3>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Sorry!</strong> - @TempData["Error"]
                    </div>
                }

                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label" style="color: #495057;"></label>
                        <input asp-for="FullName" class="form-control form-control-lg rounded-pill" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="form-label" style="color: #495057;"></label>
                        <input asp-for="EmailAddress" class="form-control form-control-lg rounded-pill" placeholder="Enter your email address" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label" style="color: #495057;"></label>
                        <input asp-for="UserName" class="form-control form-control-lg rounded-pill" placeholder="Enter your Username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label" style="color: #495057;"></label>
                        <input asp-for="Password" class="form-control form-control-lg rounded-pill" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="form-label" style="color: #495057;"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-pill" type="password" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a class="btn btn-outline-secondary rounded-pill" asp-controller="Home" asp-action="Index">Cancel</a>
                        <input class="btn btn-primary rounded-pill" type="submit" value="Sign up" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
