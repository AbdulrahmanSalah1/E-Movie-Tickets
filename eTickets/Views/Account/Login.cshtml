@using eTickets.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";
}

<body style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-5" style="max-width: 400px; width: 100%; background-color: rgba(255, 255, 255, 0.95); border-radius: 12px;">
            <div class="card-body">
                <h3 class="text-center mb-4" style="color: #007bff; font-weight: bold;">@ViewData["Title"]</h3>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Oops!</strong> - @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="form-label" style="color: #495057; font-weight: bold;"></label>
                        <input asp-for="EmailAddress" class="form-control form-control-lg rounded-pill" placeholder="Enter your email" aria-describedby="emailHelp" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Password" class="form-label" style="color: #495057; font-weight: bold;"></label>
                        <input asp-for="Password" class="form-control form-control-lg rounded-pill" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-primary text-decoration-none">Forgot your password?</a>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a class="btn btn-outline-secondary rounded-pill me-2" asp-controller="Home" asp-action="Index">Cancel</a>
                        <button type="submit" class="btn btn-primary rounded-pill">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
