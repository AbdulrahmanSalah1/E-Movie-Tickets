@{
    ViewData["Title"] = "Reset Password Confirmation";
}
<body style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%; background-color: rgba(255, 255, 255, 0.95); border-radius: 12px;">
            <div class="card-body text-center">
                <h2 class="text-success mb-4">@ViewData["Title"]</h2>
                <p class="mb-4">Your password has been reset successfully. You can now <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success">log in</a> with your new password.</p>
            </div>
        </div>
    </div>
</body>