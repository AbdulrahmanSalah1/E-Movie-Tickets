@using eTickets.Data.ViewModels
@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<body style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-5" style="max-width: 500px; width: 100%; background-color: rgba(255, 255, 255, 0.9); border-radius: 12px;">
            <div class="card-body">
                <h4 class="text-center mb-4" style="color: #007bff;">Reset Your Password</h4>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Oops!</strong> - @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="ResetPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label" style="color: #333;"></label>
                        <input asp-for="Password" class="form-control form-control-lg rounded-pill" type="password" placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="form-label" style="color: #333;"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-pill" type="password" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary rounded-pill" asp-controller="Account" asp-action="Login">Cancel</a>
                        <input class="btn btn-primary rounded-pill" type="submit" value="Reset Password" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
