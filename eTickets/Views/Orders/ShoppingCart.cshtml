@using eTickets.Data.ViewModels;
@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart Summary";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center mb-4">
            <h2>Your Shopping Cart Summary</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Selected Amount</th>
                        <th>Movie</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)

                    {
                        <tr>
                            <td class="align-middle text-center">@item.Amount</td>
                            <td class="align-middle">@item.Movie.Name</td>
                            <td class="align-middle text-end">@item.Movie.Price.ToString("c")</td>
                            <td class="align-middle text-end">@((item.Amount * item.Movie.Price).ToString("c"))</td>
                            <td class="align-middle text-center">
                                <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                                   asp-route-id="@item.Movie.Id" aria-label="Remove item">
                                    <i class="bi bi-cart-dash"></i>
                                </a>
                                |
                                <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                                   asp-route-id="@item.Movie.Id" aria-label="Add item">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><b>Total:</b></td>
                        <td class="text-end">@Model.ShoppingCartTotal.ToString("c")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="text-center mt-4">
            <div class="btn-group">
                <div id="paypal-btn"></div>
                <span class="mx-2"></span>
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                    Add More Items
                </a>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)

        {
            <div class="alert alert-danger mt-4" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="mt-5">
            <h4>Complete Your Order</h4>
            <form asp-action="CompleteOrder" method="post" novalidate>
                <div class="form-group mb-3">
                    <label for="movieDate">Movie Date</label>
                    <input type="date" class="form-control" id="movieDate" name="movieDate" required aria-required="true" />
                </div>
                <div class="form-group mb-3">
                    <label for="cardNumber">Card Number</label>
                    <input type="text" class="form-control" id="cardNumber" name="CardNumber" required aria-required="true" placeholder="1234 5678 9012 3456" />
                </div>
                <div class="form-group mb-3">
                    <label for="expiryDate">Expiry Date</label>
                    <input type="text" class="form-control" id="expiryDate" name="ExpiryDate" required aria-required="true" placeholder="MM/YY" />
                </div>
                <div class="form-group mb-3">
                    <label for="cvv">CVV</label>
                    <input type="text" class="form-control" id="cvv" name="CVV" required aria-required="true" placeholder="123" />
                </div>
                <button type="submit" class="btn btn-primary">Complete Order</button>
            </form>
        </div>
    </div>
</div>
