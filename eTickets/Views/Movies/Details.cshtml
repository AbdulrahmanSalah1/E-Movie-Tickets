@model eTickets.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<!-- Link to External CSS and Font Awesome -->
<link rel="stylesheet" href="~/css/movieDetails.css" integrity="sha512-Fo3rlrZj/k7ujTTXABr0Zx4cI2LjvzC3H6zQX9JN1bxGogdQcl1T5z9uUjlmOqAb6Zr8nD8W4fFK1FrnPMdqBQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    .rating > label::before {
        content: "\2605";
        position: absolute;
        opacity: 0
    }

    .rating > label:hover:before,
    .rating > label:hover ~ label:before {
        opacity: 1 !important
    }

    .rating > input:checked ~ label:before {
        opacity: 1
    }

    .rating:hover > input:checked ~ label:before {
        opacity: 0.4
    }
</style>
<div class="container my-5">

    <!-- Movie Details Section -->
    <div class="card mb-5 shadow-sm">
        <div class="row g-0">
            <!-- Movie Image Carousel -->
            <div class="col-md-6">
                <div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="@Model.ImageURL" class="d-block w-100" alt="@Model.Name">
                        </div>
                        <!-- Additional carousel items can be added here -->
                    </div>
                </div>
            </div>
            <!-- Movie Information -->
            <div class="col-md-6">
                <div class="card-body">
                    <p>
                        <h5 class="card-title mb-0">@Model.Name</h5>
                    </p>
                    <p class="card-text"><b>Description:</b>@Model.Description</p>
                    <p class="card-text"><b>Cinema:</b> <a href="@Url.Action("Details", "Cinemas", new { id = Model.CinemaId })">@Model.Cinema.Name</a></p>
                    <p class="card-text"><b>Producer:</b> <a href="@Url.Action("Details", "Producers", new { id = Model.ProducerId })">@Model.Producer.FullName</a></p>
                    <p class="card-text"><b>Category:</b> @Model.MovieCategory</p>
                    <p class="card-text"><b>Start Date:</b> @Model.StartDate.ToString("dd-MM-yyyy")</p>
                    <p class="card-text"><b>End Date:</b> @Model.EndDate.ToString("dd-MM-yyyy")</p>
                    <p class="card-text"><b>Show Time:</b> @Model.ShowTime.ToString("HH:mm")</p>
                    <p class="card-text"><b>Available Tickets:</b> @Model.AvailableTickets</p>
                    <p class="card-text">
                        <b>Status:</b>
                        @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)

                        {
                            <span class="badge bg-success ms-2">
                                <i class="bi bi-check-circle badge-icon"></i> Available
                            </span>
                        }

                        else if (DateTime.Now > Model.EndDate)

                        {
                            <span class="badge bg-danger ms-2">
                                <i class="bi bi-x-circle badge-icon"></i> Expired
                            </span>
                        }

                        else

                        {
                            <span class="badge bg-warning text-dark ms-2">
                                <i class="bi bi-clock badge-icon"></i> Upcoming
                            </span>
                        }
                    </p>
                    <!-- Actors Section -->
                    <p class="card-text">
                        <b>Actors:</b>
                        <hr />
                        <div class="row">
                            @foreach (var actor in Model.Actors_Movies)

                            {
                                <div class="col-4 text-center mb-3">
                                    <img class="border-info rounded-circle" src="@actor.Actor.ProfilePictureURL" style="width: 100px; height:100px;" alt="@actor.Actor.FullName" />
                                    <br />
                                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.ActorId">@actor.Actor.FullName</a>
                                </div>
                            }
                        </div>
                    </p>
                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a class="btn btn-outline-secondary me-2" href="@Url.Action("Index", "Movies")">Back to List</a>
                        @if (!User.IsInRole("Admin") && DateTime.Now <= Model.EndDate && Model.AvailableTickets > 0)

                        {
                            <a class="btn btn-primary" href="@Url.Action("AddItemToShoppingCart", "Orders", new { id = Model.Id })">
                                <i class="bi bi-cart-plus"></i>Add to Cart (@Model.Price.ToString("C"))
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Comments Section -->
    <div class="card mb-5 shadow-sm">
        <div class="card-body">
            <h4 class="mb-4">Comments</h4>

            @if (Model.Comments.Any())
            {
                @foreach (var comment in Model.Comments.OrderByDescending(c => c.Date))

                {
                    <div class="d-flex mb-4">
                        <img src="~/Picture1.png" class="rounded-circle me-3" style="height:40px; width:40px;" alt="@comment.UserName">
                        <div>
                            <h6 class="mb-1">@comment.UserName <small class="text-muted">@comment.Date.ToString("dd MMM yyyy HH:mm")</small></h6>
                            <p class="mb-0">@comment.Text</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No comments yet. Be the first to comment!</p>
            }

            <!-- Add Comment Form -->
            <form asp-action="AddComment" method="post" class="mt-4">
                <input type="hidden" name="movieId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="commentText" class="form-label">Add a Comment</label>
                    <textarea class="form-control" id="commentText" name="commentText" rows="3" placeholder="Write your comment here..." required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit Comment</button>
            </form>
        </div>
    </div>

    <!-- Ratings Section -->
    <div class="card mb-5 shadow-sm">
        <div class="card-body">
            <h4 class="mb-4">Ratings</h4>
            <!-- Display Average Rating -->
            <div class="d-flex align-items-center mb-4">
                <span class="me-2">Average Rating:</span>
                @if (Model.Ratings.Any())
                {
                    var avgRating = Model.Ratings.Average(r => r.Value);
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi @((i <= avgRating) ? "bi-star-fill" : "bi-star")"></i>
                        }
                        <span class="ms-2"> (@avgRating / 5)   (@Model.Ratings.Count() reviews)</span>
                    </div>
                }
                else
                {
                    <span class="text-muted">No ratings yet.</span>
                }

            </div>
            <form asp-action="AddRating" method="post" class="mt-3">
                <input type="hidden" name="movieId" value="@Model.Id" />
                <div class="form-group">
                    <label for="ratingValue" class="form-label">Rate this Movie</label>
                    <div class="d-flex">
                        <div class="rating" style="display: flex;flex-direction: row-reverse;justify-content: center">

                            @for (int i = 5; i >= 1; i--)
                            {
                                <input type="radio" id="@i" style="display:none" name="ratingValue" value="@i" required />

                                <label for="@i" title="@i stars" style="position: relative;width: 1em;font-size: 30px;font-weight: 300;color: #FFD600;cursor: pointer">
                                    <i class="bi bi-star"></i>
                                </label>
                            }
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </form>

        </div>
    </div>

</div>

