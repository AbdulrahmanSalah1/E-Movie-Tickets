@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}

<div class="container my-4">
    <div class="row">
        @foreach (var item in Model)

        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <img src="@item.ProfilePictureURL" class="card-img-top rounded-top" alt="@item.FullName" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center mb-3">@item.FullName</h5>
                        <p class="card-text text-center flex-grow-1">@item.Bio</p>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))

                        {
                            <div class="d-flex justify-content-around mt-3">
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                                <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@await Html.PartialAsync("_CreateItem", "Producers")