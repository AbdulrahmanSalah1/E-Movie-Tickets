@model Producer

@{
    ViewData["Title"] = "Details of the Producer";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Details for @Model.FullName</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-light rounded-lg">
                <img src="@Model.ProfilePictureURL" class="card-img-top rounded-top" alt="@Model.FullName" style="height: 300px; object-fit: cover;" />

                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="card-text">@Model.Bio</p>

                    <div class="d-flex justify-content-between mt-3">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))

                        {
                            <a class="btn btn-outline-success btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Show All</a>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
