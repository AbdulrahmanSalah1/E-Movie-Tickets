@model Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Delete Confirmation for @Model.Name</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img src="@Model.Logo" class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" alt="Cinema Logo" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label">Logo</label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GovernId" class="control-label">Governorate</label>
                    <select asp-for="GovernId" class="form-control">
                        @foreach (var item in (List<Govern>)ViewData["Gov"])

                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="GovernId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: If you have a default image URL or want to preview uploaded files, use this.
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            // Check if a Logo URL is available
            if (output.src) {
                output.src = "@Model.Logo";
            }
        });
    </script>
}
